@model Recipe

<div class="card shadow border-0 mt-4">
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="@Model.Id" hidden />
            <input asp-for="@Model.ApplicationUserId" hidden />
            <input asp-for="@Model.Approved" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">

                        <div class="row mb-3">
                            <label asp-for="@Model.Title" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input disabled asp-for="@Model.Title" class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">
                                Products
                            </label>
                            <div class="col-sm-10">
                                <select id="productSelect" data-placeholder="Select options" multiple="multiple" data-multi-select></select>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                <a asp-area="" asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script type="text/javascript">
        
    </script>
}